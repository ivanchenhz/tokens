{
  "pickers": {
    "comment": "Applied to date picker.",
    "figma": "https://www.figma.com/file/NaNrfXjygZtRgMfHAFHjsp/Components---Windows?node-id=51360%3A117328",
    "datePicker": {
      "month": {
        "text": {
          "#normal": "@theme-text-primary-normal"
        }
      },
      "weekDay": {
        "text": {
          "#normal": "@theme-text-secondary-normal"
        }
      },
      "date": {
        "background":{
          "#normal": "@theme-button-secondary-normal",
          "#hovered": "@theme-button-secondary-hover",
          "#pressed": "@theme-button-secondary-pressed",
          "#disabled": "@theme-button-secondary-normal",
          "#active": "@theme-background-accent-normal"
        },
        "text": {
          "#normal": "@theme-text-primary-normal",
          "#hovered": "@theme-text-primary-normal",
          "#pressed": "@theme-text-primary-normal",
          "#disabled": "@theme-text-primary-disabled",
          "#active": "@theme-common-text-white"
        },
        "border": {
          "#normal": "@theme-outline-button-normal"
        },
        "unreadBadge": {
          "#normal": "@theme-background-accent-normal",
          "#active": "@theme-common-text-white"
        }
      }
    },
    "dayPicker":{
      "day":{
        "inactive": {
          "#normal": {
            "background": "@theme-button-secondary-normal",
            "text": "@theme-text-primary-normal",
            "border": "@theme-outline-button-normal"
          },
          "#hovered": {
            "background": "@theme-button-secondary-hover",
            "text": "@theme-text-primary-normal",
            "border": "@theme-outline-button-normal"
          },
          "#pressed": {
            "background": "@theme-button-secondary-pressed",
            "text": "@theme-text-primary-normal",
            "border": "@theme-outline-button-normal"
          },
          "#disabled": {
            "background": "@theme-button-secondary-normal",
            "text": "@theme-text-primary-disabled",
            "border": "@theme-outline-disabled-normal"
          }
        },
        "active": {
          "#normal": {
            "background": "@theme-button-accent-normal",
            "text": "@theme-common-text-white",
            "border": "@theme-button-accent-normal"
          },
          "#hovered": {
            "background": "@theme-button-accent-hover",
            "text": "@theme-common-text-white",
            "border": "@theme-button-accent-hover"
          },
          "#pressed": {
            "background": "@theme-button-accent-pressed",
            "text": "@theme-common-text-white",
            "border": "@theme-button-accent-pressed"
          },
          "#disabled": {
            "background": "@theme-button-primary-disabled",
            "text": "@theme-text-primary-disabled",
            "border": "@theme-button-primary-disabled"
          }
        }
      }
    }
  }
}
