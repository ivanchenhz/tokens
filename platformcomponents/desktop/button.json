{
  "button": {
    "comment": "Desktop specific button styles",
    "figma": "",
    "ghost": {
      "#normal": {
        "background": "@theme-button-secondary-normal",
        "text": "@theme-text-primary-normal",
        "border": "none"
      },
      "#hovered": {
        "background": "@theme-button-secondary-hover",
        "text": "@theme-text-primary-normal"
      },
      "#pressed": {
        "background": "@theme-button-secondary-pressed",
        "text": "@theme-text-primary-normal"
      },
      "#disabled": {
        "background": "@theme-button-secondary-normal",
        "text": "@theme-text-primary-disabled"
      },
      "#active": {
        "background": "@theme-button-secondary-pressed",
        "text": "@theme-text-primary-normal"
      }
    },
    "ghost-active":{
      "#normal": {
        "background": "@theme-button-secondary-active-normal",
        "text": "@theme-text-primary-normal",
        "border": "none"
      },
      "#hovered": {
        "background": "@theme-button-secondary-active-hover",
        "text": "@theme-text-primary-normal"
      },
      "#pressed": {
        "background": "@theme-button-secondary-active-pressed",
        "text": "@theme-text-primary-normal"
      },
      "#disabled": {
        "background": "@theme-button-secondary-active-normal",
        "text": "@theme-text-primary-disabled"
      }
    },
    "call-control-panel": {
      "#normal": {
        "background": "@theme-button-secondary-active-normal",
        "text": "@theme-text-primary-normal"
      },
      "#hovered": {
        "background": "@theme-button-secondary-active-hover",
        "text": "@theme-text-primary-normal"
      },
      "#pressed": {
        "background": "@theme-button-secondary-active-pressed",
        "text": "@theme-text-primary-normal"
      },
      "#disabled": {
        "background": "@theme-button-secondary-active-normal",
        "text": "@theme-text-primary-disabled"
      }
    },
    "common": {
      "#normal": {
        "background": "@theme-common-button-primary-normal",
        "text": "@theme-common-text-black"
      },
      "#hovered": {
        "background": "@theme-common-button-primary-hover",
        "text": "@theme-common-text-black"
      },
      "#pressed": {
        "background": "@theme-common-button-primary-pressed",
        "text": "@theme-common-text-black"
      },
      "#disabled": {
        "background": "@theme-common-button-primary-disabled",
        "text": "@theme-common-text-disabled"
      }
    },
    "common-secondary": {
      "#normal": {
        "background": "@theme-common-button-secondary-normal",
        "text": "@theme-common-text-white",
        "border": "@theme-common-outline-button-normal"
      },
      "#hovered": {
        "background": "@theme-common-button-secondary-hover",
        "text": "@theme-common-text-white"
      },
      "#pressed": {
        "background": "@theme-common-button-secondary-active-normal",
        "text": "@theme-common-text-white"
      },
      "#disabled": {
        "background": "@theme-common-button-secondary-disabled",
        "text": "@theme-common-text-disabled",
        "border": "@theme-common-outline-disabled-normal"
      }
    }
  }
}
