{
  "button": {
    "primary": {
      "#normal": {
        "text": "@theme-text-primary-normal",
        "border": "@theme-button-border-normal"
      },
      "#hovered": {
        "text": "@theme-text-inverted-normal"
      },
      "#pressed": {
        "text": "@theme-text-inverted-normal"
      },
      "#focused": {
        "border": "@theme-button-border-normal"
      },
      "#disabled": {
        "border": "@theme-button-border-disabled"
      }
    },
    "secondary": {
      "#hovered": {
        "text": "@theme-text-inverted-normal"
      },
      "#pressed": {
        "text": "@theme-text-inverted-normal"
      },
      "#focused": {
        "border": "@theme-background-primary-focus",
        "background": "@theme-background-primary-ghost"
      }
    },
    "secondary-active": {
      "#normal": {
       "text": "@theme-common-hc-highlightText",
       "background": "@theme-common-hc-highlight"
      },
      "#hovered": {
       "text": "@theme-common-hc-highlightText",
       "background": "@theme-common-hc-highlight"
      },
      "#pressed": {
       "text": "@theme-common-hc-highlightText",
       "background": "@theme-common-hc-highlight"
      },
      "#disabled": {
       "text": "@theme-text-primary-disabled",
       "background": "@theme-common-hc-buttonFace"
      }
    },
    "cancel-ghost": {
      "#hovered": {
        "text": "@theme-text-inverted-normal"
      },
      "#pressed": {
        "text": "@theme-text-inverted-normal"
      }
    },
    "accent-ghost": {
      "#hovered": {
        "text": "@theme-text-inverted-normal"
      },
      "#pressed": {
        "text": "@theme-text-inverted-normal"
      }
    },
    "message-ghost": "@button-accent-ghost",
    "join-fill": {
      "#hovered": {
        "text": "@theme-text-inverted-normal"
      },
      "#pressed": {
        "text": "@theme-text-inverted-normal"
      }
    },
    "join-outline": {
      "#hovered": {
        "text": "@theme-text-inverted-normal"
      },
      "#pressed": {
        "text": "@theme-text-inverted-normal"
      }
    },
    "cancel-fill": {
      "#hovered": {
        "text": "@theme-text-inverted-normal"
      },
      "#pressed": {
        "text": "@theme-text-inverted-normal"
      }
    },
    "cancel-outline": {
      "#hovered": {
        "text": "@theme-text-inverted-normal"
      },
      "#pressed": {
        "text": "@theme-text-inverted-normal"
      }
    },
    "accent-fill": {
      "#hovered": {
        "text": "@theme-text-inverted-normal"
      },
      "#pressed": {
        "text": "@theme-text-inverted-normal"
      }
    },
    "message-fill": "@button-accent-fill",
    "counter": {
      "#hovered": {
        "text": "@theme-text-inverted-normal"
      },
      "#pressed": {
        "text": "@theme-text-inverted-normal"
      }
    },
    "ghost": {
      "#normal": {
        "border": "@theme-button-border-normal"
      },
      "#hovered": {
        "text": "@theme-text-inverted-normal"
      },
      "#pressed": {
        "text": "@theme-text-inverted-normal"
      },
      "#focused": {
        "text": "@theme-text-primary-normal",
        "border": "@theme-background-primary-focus",
        "background": "@theme-background-primary-ghost"
      },
      "#active": {
        "text": "@theme-text-inverted-normal"
      },
      "#disabled": {
        "background": "@theme-background-primary-ghost",
        "border": "@theme-button-border-disabled"
      }
    },
    "ghost-active": {
      "#normal": {
       "text": "@theme-common-hc-highlightText",
       "background": "@theme-common-hc-highlight"
      },
      "#hovered": {
       "text": "@theme-common-hc-highlightText",
       "background": "@theme-common-hc-highlight"
      },
      "#pressed": {
       "text": "@theme-common-hc-highlightText",
       "background": "@theme-common-hc-highlight"
      },
      "#disabled": {
       "text": "@theme-text-primary-disabled",
       "background": "@theme-common-hc-buttonFace"
      }
    },
    "dialpad": {
      "#hovered": {
        "text": {
          "number": "@theme-text-inverted-normal",
          "characters": "@theme-text-inverted-normal"
        }
      },
      "#pressed": {
        "text": {
          "number": "@theme-text-inverted-normal",
          "characters": "@theme-text-inverted-normal"
        }
      }
    }
  }
}
